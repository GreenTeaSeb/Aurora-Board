<!DOCTYPE html>
<html lang="en">
  <head>
	<% include!("./header.stpl"); %>
	<!-- custom -->
    <title>Aurora Board</title>
    <link rel="stylesheet" href="/css/home.css" />
      <script type="module" src="/home.js"></script>
     </head>
  <body>
     <% include!("./navbar.stpl"); %>
    <main id="content" class="">
    <aside id="sidebar-left" class="sidebar">
	    <% include!("./leftside.stpl"); %>
	</aside>

	<div id="posts">
		<div class="page">
  		<% for post in posts { %>
		    <div class="tile">	
			<a class="src" href=  <%= format!("\"/boards/{}\"", post.board_name.clone().unwrap_or_default() ) %> >
			    <img src= <%= format!("\"{}\"", post.board_icon.clone().unwrap_or_default() ) %> alt="">
			    <%= post.board_name.unwrap_or_default() %>
			</a>
		<% include!("./tiletemplate.stpl");%>
		    </div>
		    <%};%>
		</div>
		<% include!("./loading.stpl");%>

       </div>
       <aside id="sidebar-right" class="sidebar">

	<div class="panel"> 	
	<div class="section">
	    <h2 class="title">Top boards</h2>		
	</div>
	 <div id="top" class="section">
	   <ol>
	     <% for board in &top_boards { %>
	     <li>
	       <a  href= <%= format!("\"/boards/{}\"",board.name) %>class = "entry">
		   <img src= <%= board.icon %> alt="">
		 <p class="name" > <%= board.name %> </p>
		 <p class="count"> <%= board.member_count %> </p>
	       </a>
	     </li>
	     <% } %>
	   </ol>
	 </div>	
	 <div id="options" class="section">
	   <a href="/boards" class ="button hover">New board</a>
	 </div>
	</div>
	</aside>
    </main>
  </body>
</html>
