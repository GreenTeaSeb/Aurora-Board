<!DOCTYPE html>
<html lang="en">
  <head>
	<% include!("./header.stpl"); %>
	<!-- custom -->
    <title>Aurora Board</title>
    <link rel="stylesheet" href="/css/home.css" />
     </head>
  <body>
    <div class="modal">aaa</div>
     <% include!("./navbar.stpl"); %>
	<main id="content" class="">
	    <div id="posts">
           </div>
	   <aside id="sidebar-right" class="sidebar">
	     <div id="top">
	       <ol>
		 <% for board in &top_boards { %>
		 <li>
		   <div class = "entry">
		     <a class="name" href= <%= format!("\"/boards/{}\"",board.name) %> > <%= board.name %> </a>
		     <p class="count"> <%= board.member_count %> <p> </div>
		 </li>
		 <% } %>
	       </ol>
	     </div>	
	     <div id="options">
	       <a href="/new/board" class ="button">New board</a>
	     </div>
	    </aside>
	</main>
  </body>
</html>
